@{
    Layout = "~/Views/Shared/_LayoutEmployer.cshtml";
}

@{
    ViewData["Title"] = "Next steps";
    ViewData["PageID"] = "tl-employer-nextsteps";

}
@model FindViewModel

<section id="tl-employer-nextsteps--banner" class="tl-content-wide--purple">
    <div class="tl-container tl-overflow--fix">
        <div class="row no-gutters">
            <div class="col-lg-8">
                <div class="tl-content--box tl-content--box--left">
                    <h1>Next steps</h1>
                    <p class="tl-lead">
                        Our support and guidance can help you:
                    </p>
                    <ul class="tl-list--bullet">
                        <li>find local colleges and schools with placement students</li>
                        <li>get answers to any questions you have about T Levels and industry placements</li>
                        <li>plan and prepare to offer placements</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 d-none d-lg-flex tl-image--wide--right">
                <img src="/files/images/TLevels_WebsiteAssets39.jpg" alt="" />
            </div>

        </div>
    </div>
</section>

<section id="tl-employer-nextsteps--cta" class="tl-content-normal--white tl-content-padded">
    <div class="tl-container">
        <div class="row no-gutters">
            <div class="col-md-8">
                <h2>Want help finding local students?</h2>
                <p>
                    The industry placement hotline can match you with local schools and colleges who may have suitable students for you.
                </p>
                <p>Call:</p>
                <p><span class="tl-bigtext--xsmall"><a class="tl-link-inline-black--purple" id="tl-employer-cta-tel" href="tel:+4408000150600">08000 150 600</a></span> (choose option 4)</p>
                <br />
                <p>
                    Alternatively, you can send them a message.
                </p>
                <p>Email:</p>
                <p><span class="tl-bigtext--xsmall"><a class="tl-link-inline-black--purple" id="tl-employer-cta-email" href="mailto:tlevel.placement@education.gov.uk?subject=Industry%20placement%20enquiry&amp;body=To%20make%20it%20easier%20for%20us%20to%20help%20you,%20please%20include:%0D%0A-%20your%20name%20and%20the%20name%20of%20your%20business%0D%0A-%20the%20nature%20of%20your%20enquiry%0D%0A-%20how%20you%20would%20like%20us%20to%20contact%20you%20(if%20by%20phone,%20tell%20us%20when%20is%20convenient)%0D%0A%0D%0AWe%20will%20only%20use%20this%20information%20to%20contact%20you%20about%20your%20enquiry.%0D%0AWe%20will%20delete%20it%20from%20our%20system%20within%2030%20days%20of%20receiving%20it. ">tlevel.placement@education.gov.uk</a></span></p>

            </div>
        </div>
    </div>
</section>


<section id="tl-employer-nextsteps--register" class="tl-content-normal--purple tl-content-padded">
    <div class="tl-container">
        <div class="row no-gutters">
            <div class="col-md-8">
                <h2>Need more information?</h2>
                <p>
                    The Department of Education has funded an online resource to help you understand T Levels and take on an industry placement student.
                </p>
                <p>
                    Register now to access:
                </p>
                <ul class="tl-list--bullet">
                    <li>toolkits and guidance</li>
                    <li>webinars and workshops</li>
                    <li>direct support from specialists</li>
                </ul>

                <a href="https://employerindustryplacements.co.uk/" class="tl-button--black tl-margin-top--30"><span class="tl-hidden--mobile--down">Register for T Level and industry placement support</span><span class="tl-hidden--mobile--up">Register for more support</span></a>
            </div>
        </div>
    </div>
</section>




