@model FindViewModel

<section id="tl-headercontent" class="tl-content-wide--orange">
    <div class="tl-container">

        <div class="row no-gutters">
            <div class="col-md-6">
                <img src="/files/images/TLevels_WebsiteAssets11.jpg" alt="" />
            </div>
            <div class="col-md-6">
                <div class="tl-content--box">
                    <h1>T Level Subjects</h1>
                    <p>The first 3 T Levels start in September 2020 at selected schools and colleges in England.</p>
                    <p>More T Levels start in the following years until all 25 are available, covering everything from agriculture to catering and engineering to science.</p>
                </div>
            </div>
        </div>
    </div>
</section>

